<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Profile"
    android:background="@color/bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <ImageButton
        android:id="@+id/profile_pic_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/ic_add"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_img" />

    <ImageView
        android:id="@+id/profile_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileName" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="295dp"
        android:paddingStart="10dp"
        android:fontFamily="@font/regular"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/profile_ic"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        app:layout_constraintVertical_bias="0.402" />

    <EditText
        android:id="@+id/etProfileName"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/regular"
        android:gravity="center_vertical"
        android:hint="Enter your name"
        android:visibility="gone"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileName" />

    <ImageView
        android:id="@+id/email_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileEmail" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:fontFamily="@font/regular"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/email_ic"
        app:layout_constraintTop_toBottomOf="@+id/etProfileName"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/etProfileEmail"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/regular"
        android:gravity="center_vertical"
        android:hint="Enter your email"
        android:visibility="gone"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmail" />

    <ImageView
        android:id="@+id/status_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_status"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileStatus" />

    <TextView
        android:id="@+id/profileStatus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:fontFamily="@font/regular"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/status_ic"
        app:layout_constraintTop_toBottomOf="@id/etProfileEmail"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/etProfileStatus"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/regular"
        android:gravity="center_vertical"
        android:hint="Enter your status"
        android:visibility="gone"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileStatus" />


    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/bold"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etProfileStatus" />


    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/bold"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUpdateProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>