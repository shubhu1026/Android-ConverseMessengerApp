<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OtherUserProfile"
    android:background="@color/bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <ImageView
        android:id="@+id/profile_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileName" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="295dp"
        android:paddingStart="10dp"
        android:fontFamily="@font/regular"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/profile_ic"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        app:layout_constraintVertical_bias="0.402" />

    <ImageView
        android:id="@+id/email_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileEmail" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:fontFamily="@font/regular"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/email_ic"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        tools:layout_editor_absoluteX="50dp" />

    <ImageView
        android:id="@+id/status_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_status"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileStatus" />

    <TextView
        android:id="@+id/profileStatus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:fontFamily="@font/regular"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/status_ic"
        app:layout_constraintTop_toBottomOf="@id/profileEmail"
        tools:layout_editor_absoluteX="50dp" />



</androidx.constraintlayout.widget.ConstraintLayout>